let isDarkMode = false;

// On click, toggle dark mode on <html>
const toggleDarkMode = () => {
  isDarkMode = !isDarkMode;
  if (isDarkMode) {
    document.documentElement.classList.add('dark');
  } else {
    document.documentElement.classList.remove('dark');
  }
};
---

<button onclick="toggleDarkMode()" class="p-2 bg-gray-300 dark:bg-gray-700 text-black dark:text-white rounded">
  Toggle Dark Mode
</button>