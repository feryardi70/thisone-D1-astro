import Navbar from '../components/Navbar.astro';
import DragAndDropUpload from '../components/Mtf';

const baseURL = import.meta.env.VITE_BASE_URL || "https://hono-app.fery-ardiansyah94747.workers.dev";

const response = await fetch(`${baseURL}/cookie`, {
    credentials: "include",
});
const data = await response.json() as any;
const token = data.token;

if (data.message == "no message"){
	Astro.response.headers.set('Set-Cookie', `token=${token}; Path=/; maxAge=600;`);
}
---

<Layout>
    <Navbar />
    <DragAndDropUpload client:load/>
</Layout>